<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".totalperiod">

    <TextView
        android:id="@+id/textViewtotper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="TextView"
        android:fontFamily="serif"
        android:gravity="center"
        android:layout_marginBottom="250dp"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/llllperiod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewtotper"
        android:layout_marginTop="-282dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/stockbtnallperiod"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn2"
            android:textColor="@color/white"
            android:text="stock" />

        <Button
            android:id="@+id/chichabtnallperiod"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:background="@drawable/btn2"
            android:text="chicha" />

        <Button
            android:id="@+id/contoirebtnallperiod"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn2"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:text="contoire" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/aaaaaaaaaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llllperiod"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/autrebtnallperiod"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="autre"
            android:background="@drawable/btn2"/>
    </LinearLayout>

</RelativeLayout>